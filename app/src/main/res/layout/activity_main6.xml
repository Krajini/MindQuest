<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E35B5B"
    android:padding="24dp"
    tools:context=".MainActivity6">

    <Button
        android:id="@+id/btn_back1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Back"
        android:textColor="#FFF" /> <!-- Added text color for better visibility -->

    <TextView
        android:id="@+id/total_question1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Questions"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:textColor="#EEE0F1"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/choices_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/total_question1"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:gravity="center"> <!-- Center the choices layout -->

        <TextView
            android:id="@+id/question1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="This will be our question"
            android:textColor="#F7F5F8"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/ans_a1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FBFBFB"
            android:text="Ans A"
            android:textColor="@android:color/black"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/ans_b1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FBFBFB"
            android:text="Ans B"
            android:textColor="@android:color/black"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/ans_c1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FBFBFB"
            android:text="Ans C"
            android:textColor="@android:color/black"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/ans_d1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FBFBFB"
            android:text="Ans D"
            android:textColor="@android:color/black"
            android:textSize="24sp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_submit1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#65E614"
        android:text="Submit"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:layout_below="@id/choices_layout1"
        android:layout_marginTop="20dp" /> <!-- Added margin for spacing -->

</RelativeLayout>
